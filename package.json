{
  "name": "spotify-badge",
  "version": "1.1.0",
  "license": "MIT",
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "vercel dev",
    "type-check": "tsc --noEmit",
    "format": "prettier --write '{**/*.{ts,json},.prettierrc}'"
  },
  "dependencies": {
    "isomorphic-unfetch": "^4.0.2",
    "preact": "^10.24.3",
    "preact-render-to-string": "^6.5.11"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/spotify-api": "^0.0.25",
    "@vercel/node": "^3.2.24",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vercel": "^39.0.0"
  },
  "nodemonConfig": {
    "ext": "ts",
    "exec": "vercel dev",
    "watch": [
      "api/*",
      "components/*",
      "lib/*",
      "consts.ts"
    ]
  }
}
